  <script>
    // === INITIAL PASSWORD (from your message) ===
    let MAIN_PASSWORD = 'i blahblah you so much'; // change this in code if you want

    // placeholders for personal section passwords (set later in-browser if needed)
    let personalPasswords = {maheen: null, zeeshan: null};

    function attemptLogin(){
      const val = document.getElementById('mainPassword').value.trim();
      if(val === MAIN_PASSWORD){
        document.getElementById('loginOverlay').style.display='none';
        document.getElementById('siteContent').style.display='block';
        // build QR
        buildQR();
        loadQuickNotes();
      } else {
        alert('Incorrect password â€” please try again.');
      }
    }

    function scrollToSection(id){
      const el = document.getElementById(id);
      if(el){ el.scrollIntoView({behavior:'smooth',block:'start'}); }
    }

    function openPlaylist(){
      // change this if your playlist url differs
      const url = 'https://open.spotify.com/playlist/';
      window.open(url, '_blank');
    }

    function buildQR(){
      // QR points to the playlist URL (change the url variable if you want a specific playlist)
      const playlistURL = encodeURIComponent('https://open.spotify.com/playlist/');
      const qrImg = document.getElementById('playlistQR');
      // using free qrserver API
      qrImg.src = `https://api.qrserver.com/v1/create-qr-code/?size=200x200&data=${playlistURL}`;
    }

    // Quick notes using localStorage (simple temporary feature)
    function addQuickNote(){
      const t = document.getElementById('quickTxt');
      const val = t.value.trim();
      if(!val) return;
      const notes = JSON.parse(localStorage.getItem('quickNotes')||'[]');
      notes.unshift({text:val,ts:Date.now()});
      localStorage.setItem('quickNotes', JSON.stringify(notes));
      t.value='';
      loadQuickNotes();
    }
    function loadQuickNotes(){
      const list = document.getElementById('quickList');
      const notes = JSON.parse(localStorage.getItem('quickNotes')||'[]');
      list.innerHTML = notes.map(n=>`<li>${new Date(n.ts).toLocaleString()} â€” ${escapeHtml(n.text)}</li>`).join('');
    }

    function escapeHtml(s){ return s.replace(/&/g,'&amp;').replace(/</g,'&lt;').replace(/>/g,'&gt;'); }

    function changeMainPassword(){
      const v = document.getElementById('newMainPass').value.trim();
      if(!v){ alert('Enter a password'); return }
      MAIN_PASSWORD = v; // note: only in-memory â€” to make persistent, change the string in index.html
      alert('Main password updated locally. To persist it for everyone, change the MAIN_PASSWORD value in index.html file in your repo.');
    }

    // Personal section unlocking (simple prompt-based). For stronger security implement server-side auth.
    function unlockPersonal(name){
      const setKey = 'personalPass_'+name;
      let pwd = localStorage.getItem(setKey);
      if(!pwd){
        // ask to create password
        const create = prompt(`Set a password for ${name} (this saves in your browser). Leave blank to cancel.`);
        if(create){ localStorage.setItem(setKey, create); pwd = create; alert('Password set locally. Next time use the Unlock button and enter it.'); }
        else return;
      }
      const attempt = prompt('Enter password to unlock ' + name + ':');
      if(attempt === pwd){
        document.getElementById(name+'Locked').style.display='none';
        document.getElementById(name+'Content').style.display='block';
      } else {
        alert('Wrong password.');
      }
    }

    // small helper to ensure placeholder images won't block layout
    window.addEventListener('load', ()=>{
      // nothing additional for now
    })
  </script>

  <!-- NOTES: 
    * This is a single-file static site (index.html). To publish on GitHub Pages, create a new repo named e.g. "12-16" and upload this as index.html then enable Pages on the main branch (root).
    * To add real images: create an "images" folder in your repo and add <img src="images/yourphoto.jpg"> to the gallery section.
    * To change the main login password permanently: edit the MAIN_PASSWORD value in the script near the top of the file.
    * The personal section passwords are stored in the browser's localStorage (only visible on the device used to create them). If you want cross-device private areas, you'll need a server or password-sharing approach.
    * If you'd like, I can also split the file into separate assets and create a README with exact GitHub steps.
  -->
